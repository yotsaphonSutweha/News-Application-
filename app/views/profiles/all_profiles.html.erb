<h1 class="heading">Profiles</h1>
<% if @profiles %>
    <div class="row">
        <% for profile in @profiles %>
        <div class="col-lg-6 card-wrapper"> 
            <div class="card style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="https://picsum.photos/id/212/200/300" class="card-img">
                    </div>
                    <div class="col-md-8"> 
                        <div class="card-body">
                            <h5 class="card-title"><b>Username:</b> <%= profile.user.username %></h5>
                            <h6 class="card-subtitle"><b>Role:</b> <%= profile.role %></h6><br/>
                            <p>Followers: <%= profile.no_of_followers %></p>
                            <p><%= profile.bio %></p>
                            <% if @current_profile.id != profile.id %>
                                <% if @followed_profile_ids.include? profile.id.to_s %>
                                   <p style="color: #ff6458;">Followed</p>
                                <% else %>
                                    <%= link_to 'Follow', follow_url(:following_id => profile.id )%>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>   
</div>
<% end %>
